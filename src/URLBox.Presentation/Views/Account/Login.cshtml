@model URLBox.Presentation.Models.LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Sign in";
}

<section class="auth-wrapper d-flex align-items-center justify-content-center py-5">
    <div class="card shadow-sm auth-card">
        <div class="card-body p-4 p-md-5">
            <h1 class="h3 mb-3 text-center">Welcome back</h1>
            <p class="text-muted text-center mb-4">Sign in to continue to URL Box.</p>

            <form asp-action="Login" method="post" class="needs-validation" novalidate>
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                        <input asp-for="UserName" class="form-control" autocomplete="username" />
                    </div>
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" autocomplete="current-password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>
                    <a asp-controller="Home" asp-action="Index" class="small">Back to home</a>
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100">Login</button>
            </form>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .auth-wrapper {
            min-height: calc(100vh - 120px);
        }

        .auth-card {
            max-width: 420px;
            width: 100%;
            border-radius: 18px;
        }

        .auth-card .input-group-text {
            background-color: transparent;
        }
    </style>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
