@model URLBox.Presentation.Models.AdminDashboardViewModel
@using System
@using System.Linq
@using System.Text.Json
@{
    ViewData["Title"] = "Admin dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var statusMessage = Model.StatusMessage;
    var usersChartLabels = JsonSerializer.Serialize(Model.UsersPerRole.Select(p => p.Label));
    var usersChartValues = JsonSerializer.Serialize(Model.UsersPerRole.Select(p => p.Value));
    var urlsChartLabels = JsonSerializer.Serialize(Model.UrlsPerRole.Select(p => p.Label));
    var urlsChartValues = JsonSerializer.Serialize(Model.UrlsPerRole.Select(p => p.Value));
    var rolesInUse = Model.Roles.Count(r => r.AssignedUserCount > 0);
    var averageUrlsPerUser = Model.TotalUsers == 0 ? 0 : Math.Round((double)Model.TotalUrls / Model.TotalUsers, 1);
}

<section class="py-4">
    <div class="d-flex flex-column flex-xl-row justify-content-between align-items-xl-center gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">Administration</h1>
            <p class="text-muted mb-0">A minimal workspace for people, roles, and URL visibility.</p>
        </div>
        <div class="d-flex flex-wrap gap-2">
            <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#createUserModal">
                <i class="bi bi-person-plus me-1"></i>
                New user
            </button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoleModal">
                <i class="bi bi-shield-plus me-1"></i>
                New role
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-info-circle me-1"></i>
            @statusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-3 mb-4">
        <div class="col-6 col-xl-3">
            <div class="stat-card shadow-sm h-100">
                <span class="stat-label">Total users</span>
                <span class="stat-value">@Model.TotalUsers</span>
                <span class="stat-subtext">@Model.UsersWithoutRoleCount user@(Model.UsersWithoutRoleCount == 1 ? string.Empty : "s") without role</span>
            </div>
        </div>
        <div class="col-6 col-xl-3">
            <div class="stat-card shadow-sm h-100">
                <span class="stat-label">Total roles</span>
                <span class="stat-value">@Model.TotalRoles</span>
                <span class="stat-subtext">@rolesInUse in use</span>
            </div>
        </div>
        <div class="col-6 col-xl-3">
            <div class="stat-card shadow-sm h-100">
                <span class="stat-label">Stored URLs</span>
                <span class="stat-value">@Model.TotalUrls</span>
                <span class="stat-subtext">@Model.PublicUrlCount public · @Model.PrivateUrlCount private</span>
            </div>
        </div>
        <div class="col-6 col-xl-3">
            <div class="stat-card shadow-sm h-100">
                <span class="stat-label">Average URLs / user</span>
                <span class="stat-value">@averageUrlsPerUser.ToString("0.0")</span>
                <span class="stat-subtext">Balanced distribution keeps things tidy</span>
            </div>
        </div>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent py-3">
                    <h2 class="h6 mb-0">Users by role</h2>
                </div>
                <div class="card-body">
                    @if (!Model.UsersPerRole.Any())
                    {
                        <p class="text-muted mb-0">Assign roles to start tracking usage.</p>
                    }
                    else
                    {
                        <canvas id="usersRoleChart" height="220"></canvas>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent py-3">
                    <h2 class="h6 mb-0">URLs by project / role</h2>
                </div>
                <div class="card-body">
                    @if (!Model.UrlsPerRole.Any())
                    {
                        <p class="text-muted mb-0">No URLs have been stored yet.</p>
                    }
                    else
                    {
                        <canvas id="urlsRoleChart" height="220"></canvas>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-12 col-xl-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Users</h2>
                        <span class="badge text-bg-secondary">@Model.Users.Count</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Users.Count == 0)
                    {
                        <p class="text-muted mb-0">No users have been created yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Roles</th>
                                        <th scope="col" class="text-center">URLs</th>
                                        <th scope="col" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td class="fw-medium">@user.UserName</td>
                                            <td>
                                                @if (string.IsNullOrWhiteSpace(user.Email))
                                                {
                                                    <span class="text-muted">No email</span>
                                                }
                                                else
                                                {
                                                    <span>@user.Email</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Roles.Any())
                                                {
                                                    <div class="d-flex flex-wrap gap-2">
                                                        @foreach (var role in user.Roles)
                                                        {
                                                            <form asp-action="RemoveRole" method="post" class="d-inline">
                                                                @Html.AntiForgeryToken()
                                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                                <input type="hidden" name="roleName" value="@role" />
                                                                <button type="submit" class="btn btn-sm btn-outline-secondary d-inline-flex align-items-center gap-1">
                                                                    <span>@role</span>
                                                                    <i class="bi bi-x-lg"></i>
                                                                </button>
                                                            </form>
                                                        }
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No roles assigned</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge text-bg-light border">@user.OwnedUrlCount</span>
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal"
                                                            data-bs-target="#editUserModal" data-user-id="@user.UserId"
                                                            data-user-name="@user.UserName" data-user-email="@user.Email">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-secondary" type="button" data-bs-toggle="modal"
                                                            data-bs-target="#assignRoleModal" data-user-id="@user.UserId"
                                                            data-user-name="@user.UserName">
                                                        <i class="bi bi-person-badge"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" type="button" data-bs-toggle="modal"
                                                            data-bs-target="#deleteUserModal" data-user-id="@user.UserId"
                                                            data-user-name="@user.UserName">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-transparent py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">Roles</h2>
                        <span class="badge text-bg-secondary">@Model.Roles.Count</span>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Count == 0)
                    {
                        <p class="text-muted mb-0">No roles have been created yet.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var role in Model.Roles)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center gap-3">
                                    <div>
                                        <div class="fw-medium">@role.RoleName</div>
                                        <small class="text-muted">@role.AssignedUserCount user@(role.AssignedUserCount == 1 ? string.Empty : "s") · @role.UrlCount URL@(role.UrlCount == 1 ? string.Empty : "s")</small>
                                    </div>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal"
                                                data-bs-target="#renameRoleModal" data-role-id="@role.RoleId"
                                                data-role-name="@role.RoleName">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" type="button" data-bs-toggle="modal"
                                                data-bs-target="#deleteRoleModal" data-role-id="@role.RoleId"
                                                data-role-name="@role.RoleName">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Create user modal -->
<div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createUserLabel">Create user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateUser" method="post" id="createUserForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="createUserName" class="form-label">User name</label>
                        <input id="createUserName" name="UserName" class="form-control" required maxlength="256" />
                    </div>
                    <div class="mb-3">
                        <label for="createUserEmail" class="form-label">Email</label>
                        <input id="createUserEmail" name="Email" type="email" class="form-control" required maxlength="256" />
                    </div>
                    <div class="row">
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="createUserPassword" class="form-label">Password</label>
                                <input id="createUserPassword" name="Password" type="password" class="form-control" required minlength="6" maxlength="100" />
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="mb-3">
                                <label for="createUserConfirm" class="form-label">Confirm password</label>
                                <input id="createUserConfirm" name="ConfirmPassword" type="password" class="form-control" required minlength="6" maxlength="100" />
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Create user</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit user modal -->
<div class="modal fade" id="editUserModal" tabindex="-1" aria-labelledby="editUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUserLabel">Edit user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateUser" method="post" id="editUserForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="UserId" id="editUserId" />
                    <div class="mb-3">
                        <label for="editUserName" class="form-label">User name</label>
                        <input id="editUserName" name="UserName" class="form-control" required maxlength="256" />
                    </div>
                    <div class="mb-3">
                        <label for="editUserEmail" class="form-label">Email</label>
                        <input id="editUserEmail" name="Email" type="email" class="form-control" required maxlength="256" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete user modal -->
<div class="modal fade" id="deleteUserModal" tabindex="-1" aria-labelledby="deleteUserLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteUserLabel">Delete user</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteUser" method="post" id="deleteUserForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" id="deleteUserId" />
                    <p class="mb-3">
                        Are you sure you want to remove <strong id="deleteUserName"></strong>?
                    </p>
                    <button type="submit" class="btn btn-danger w-100">Delete user</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Create role modal -->
<div class="modal fade" id="createRoleModal" tabindex="-1" aria-labelledby="createRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createRoleLabel">Create role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="CreateRole" method="post" id="createRoleForm">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="createRoleName" class="form-label">Role name</label>
                        <input id="createRoleName" name="roleName" class="form-control" required maxlength="256" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Create role</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Rename role modal -->
<div class="modal fade" id="renameRoleModal" tabindex="-1" aria-labelledby="renameRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="renameRoleLabel">Rename role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateRole" method="post" id="renameRoleForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="RoleId" id="renameRoleId" />
                    <div class="mb-3">
                        <label for="renameRoleName" class="form-label">Role name</label>
                        <input id="renameRoleName" name="RoleName" class="form-control" required maxlength="256" />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Save changes</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete role modal -->
<div class="modal fade" id="deleteRoleModal" tabindex="-1" aria-labelledby="deleteRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteRoleLabel">Delete role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="DeleteRole" method="post" id="deleteRoleForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="roleId" id="deleteRoleId" />
                    <p class="mb-3">
                        This will remove the <strong id="deleteRoleName"></strong> role and unassign it from all users.
                    </p>
                    <button type="submit" class="btn btn-danger w-100">Delete role</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Assign role modal -->
<div class="modal fade" id="assignRoleModal" tabindex="-1" aria-labelledby="assignRoleLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignRoleLabel">Assign role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AssignRole" method="post" id="assignRoleForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" id="assignRoleUserId" />
                    <div class="mb-3">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" id="assignRoleUserName" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="assignRoleName">Select role</label>
                        <select class="form-select" id="assignRoleName" name="roleName" required>
                            <option value="" disabled selected>Choose role...</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role.RoleName">@role.RoleName</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Assign role</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const palette = ['#0d6efd', '#6610f2', '#6c757d', '#198754', '#fd7e14', '#20c997', '#d63384'];
        const userRoleLabels = @Html.Raw(usersChartLabels);
        const userRoleValues = @Html.Raw(usersChartValues);
        const urlsRoleLabels = @Html.Raw(urlsChartLabels);
        const urlsRoleValues = @Html.Raw(urlsChartValues);

        if (Array.isArray(userRoleLabels) && userRoleLabels.length && typeof Chart !== 'undefined') {
            const userCtx = document.getElementById('usersRoleChart');
            if (userCtx) {
                const colors = userRoleLabels.map((_, index) => palette[index % palette.length]);
                new Chart(userCtx, {
                    type: 'doughnut',
                    data: {
                        labels: userRoleLabels,
                        datasets: [{
                            data: userRoleValues,
                            backgroundColor: colors,
                            borderWidth: 0
                        }]
                    },
                    options: {
                        plugins: {
                            legend: {
                                position: 'bottom'
                            }
                        }
                    }
                });
            }
        }

        if (Array.isArray(urlsRoleLabels) && urlsRoleLabels.length && typeof Chart !== 'undefined') {
            const urlCtx = document.getElementById('urlsRoleChart');
            if (urlCtx) {
                const colors = urlsRoleLabels.map((_, index) => palette[index % palette.length]);
                new Chart(urlCtx, {
                    type: 'bar',
                    data: {
                        labels: urlsRoleLabels,
                        datasets: [{
                            data: urlsRoleValues,
                            backgroundColor: colors,
                            borderRadius: 6
                        }]
                    },
                    options: {
                        plugins: {
                            legend: { display: false }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    precision: 0
                                }
                            }
                        }
                    }
                });
            }
        }

        const assignRoleModal = document.getElementById('assignRoleModal');
        if (assignRoleModal) {
            assignRoleModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                const userIdInput = document.getElementById('assignRoleUserId');
                const userNameInput = document.getElementById('assignRoleUserName');
                const select = document.getElementById('assignRoleName');

                if (userIdInput && userNameInput && select) {
                    userIdInput.value = userId ?? '';
                    userNameInput.value = userName ?? '';
                    select.selectedIndex = 0;
                }
            });
        }

        const editUserModal = document.getElementById('editUserModal');
        if (editUserModal) {
            editUserModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');
                const userEmail = button.getAttribute('data-user-email');

                document.getElementById('editUserId').value = userId ?? '';
                document.getElementById('editUserName').value = userName ?? '';
                document.getElementById('editUserEmail').value = userEmail ?? '';
            });
        }

        const deleteUserModal = document.getElementById('deleteUserModal');
        if (deleteUserModal) {
            deleteUserModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                document.getElementById('deleteUserId').value = userId ?? '';
                document.getElementById('deleteUserName').textContent = userName ?? '';
            });
        }

        const renameRoleModal = document.getElementById('renameRoleModal');
        if (renameRoleModal) {
            renameRoleModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const roleId = button.getAttribute('data-role-id');
                const roleName = button.getAttribute('data-role-name');

                document.getElementById('renameRoleId').value = roleId ?? '';
                document.getElementById('renameRoleName').value = roleName ?? '';
            });
        }

        const deleteRoleModal = document.getElementById('deleteRoleModal');
        if (deleteRoleModal) {
            deleteRoleModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const roleId = button.getAttribute('data-role-id');
                const roleName = button.getAttribute('data-role-name');

                document.getElementById('deleteRoleId').value = roleId ?? '';
                document.getElementById('deleteRoleName').textContent = roleName ?? '';
            });
        }
    </script>
}
