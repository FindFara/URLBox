@model URLBox.Presentation.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-4">
    <div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
        <div>
            <h1 class="h3 mb-1">Admin dashboard</h1>
            <p class="text-muted mb-0">Manage user roles and configure access to project URLs.</p>
        </div>
        <form asp-action="CreateRole" method="post" class="d-flex flex-column flex-sm-row gap-2">
            @Html.AntiForgeryToken()
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-shield-lock"></i></span>
                <input class="form-control" type="text" name="roleName" placeholder="New role name" required />
            </div>
            <button type="submit" class="btn btn-primary">Add role</button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-12 col-lg-7">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 mb-0">Users</h2>
                </div>
                <div class="card-body">
                    @if (Model.Users.Count == 0)
                    {
                        <p class="text-muted mb-0">No users have been created yet.</p>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Username</th>
                                        <th scope="col">Roles</th>
                                        <th scope="col" class="text-end">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td class="fw-medium">@user.UserName</td>
                                            <td>
                                                @if (user.Roles.Any())
                                                {
                                                    foreach (var role in user.Roles)
                                                    {
                                                        <span class="badge bg-secondary me-1">@role</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No roles assigned</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="d-inline-flex gap-2">
                                                    <button class="btn btn-sm btn-outline-primary" type="button" data-bs-toggle="modal" data-bs-target="#assignRoleModal"
                                                            data-user-id="@user.UserId" data-user-name="@user.UserName">
                                                        Assign role
                                                    </button>
                                                    @if (user.Roles.Any())
                                                    {
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-danger dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                                Remove role
                                                            </button>
                                                            <ul class="dropdown-menu dropdown-menu-end">
                                                                @foreach (var role in user.Roles)
                                                                {
                                                                    <li>
                                                                        <form asp-action="RemoveRole" method="post" class="px-3 py-2">
                                                                            @Html.AntiForgeryToken()
                                                                            <input type="hidden" name="userId" value="@user.UserId" />
                                                                            <input type="hidden" name="roleName" value="@role" />
                                                                            <button type="submit" class="btn btn-link p-0">@role</button>
                                                                        </form>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-white py-3">
                    <h2 class="h5 mb-0">Available roles</h2>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Count == 0)
                    {
                        <p class="text-muted mb-0">No roles have been created yet.</p>
                    }
                    else
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var role in Model.Roles)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@role</span>
                                    <i class="bi bi-people text-muted"></i>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="assignRoleModal" tabindex="-1" aria-labelledby="assignRoleLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="assignRoleLabel">Assign role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AssignRole" method="post" id="assignRoleForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="userId" id="assignRoleUserId" />
                    <div class="mb-3">
                        <label class="form-label">User</label>
                        <input type="text" class="form-control" id="assignRoleUserName" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="assignRoleName">Select role</label>
                        <select class="form-select" id="assignRoleName" name="roleName" required>
                            <option value="" disabled selected>Choose role...</option>
                            @foreach (var role in Model.Roles)
                            {
                                <option value="@role">@role</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Assign</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const assignRoleModal = document.getElementById('assignRoleModal');
        if (assignRoleModal) {
            assignRoleModal.addEventListener('show.bs.modal', event => {
                const button = event.relatedTarget;
                if (!button) return;
                const userId = button.getAttribute('data-user-id');
                const userName = button.getAttribute('data-user-name');

                const userIdInput = document.getElementById('assignRoleUserId');
                const userNameInput = document.getElementById('assignRoleUserName');
                const select = document.getElementById('assignRoleName');

                if (userIdInput && userNameInput && select) {
                    userIdInput.value = userId ?? '';
                    userNameInput.value = userName ?? '';
                    select.selectedIndex = 0;
                }
            });
        }
    </script>
}
