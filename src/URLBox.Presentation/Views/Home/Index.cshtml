@model IReadOnlyCollection<URLBox.Application.ViewModel.UrlViewModel>
@using System
@using System.Linq
@using URLBox.Application.ViewModel
@{
    ViewData["Title"] = "Your URLs";
    var projects = ViewBag.Projects as IEnumerable<ProjectViewModel> ?? Enumerable.Empty<ProjectViewModel>();
    var isAuthenticated = ViewBag.HasAccess as bool? ?? false;
}

<div class="d-flex flex-column flex-lg-row justify-content-between align-items-lg-center gap-3 mb-4">
    <div>
        <h1 class="display-6 fw-semibold">URL Catalogue</h1>
        <p class="text-secondary mb-0">Centralize the environments you and your team can access.</p>
    </div>
    <div class="d-flex gap-2">
        @if (isAuthenticated)
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addUrlModal">
                <i class="bi bi-plus-lg me-1"></i> Add URL
            </button>
        }
        else
        {
            <button class="btn btn-outline-light" data-bs-toggle="modal" data-bs-target="#loginModal">
                <i class="bi bi-person me-1"></i> Login to manage URLs
            </button>
        }
    </div>
</div>

@if (!isAuthenticated)
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2 fs-4"></i>
        <span>Sign in to access your role-specific environments.</span>
    </div>
}
else if (!Model.Any())
{
    <div class="alert alert-secondary" role="alert">
        <i class="bi bi-collection me-2"></i>No URLs available for your roles yet.
    </div>
}
else
{
    <div class="table-responsive shadow-sm rounded overflow-hidden">
        <table class="table table-dark table-striped align-middle mb-0">
            <thead class="table-secondary text-dark">
                <tr>
                    <th scope="col">Project</th>
                    <th scope="col">Description</th>
                    <th scope="col">Environment</th>
                    <th scope="col">URL</th>
                    @if (User.IsInRole("Admin"))
                    {
                        <th scope="col" class="text-end">Actions</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(m => m.ProjectName).ThenBy(m => m.Environment).ThenBy(m => m.Description))
                {
                    <tr>
                        <td class="fw-semibold">@item.ProjectName</td>
                        <td>@item.Description</td>
                        <td>
                            <span class="badge bg-primary-subtle text-uppercase">@item.Environment</span>
                        </td>
                        <td>
                            <a class="link-light text-decoration-none" href="@item.UrlValue" target="_blank" rel="noopener">
                                @item.UrlValue
                            </a>
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td class="text-end">
                                <form asp-action="DeleteUrl" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this URL?');">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Add URL Modal -->
<div class="modal fade" id="addUrlModal" tabindex="-1" aria-labelledby="addUrlModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-secondary text-light border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title" id="addUrlModalLabel">Add new URL</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddUrl" method="post" class="d-grid gap-3">
                    @Html.AntiForgeryToken()
                    <div>
                        <label for="url" class="form-label">URL</label>
                        <input type="url" id="url" name="url" class="form-control" placeholder="https://" required />
                    </div>
                    <div>
                        <label for="description" class="form-label">Description</label>
                        <input type="text" id="description" name="description" class="form-control" placeholder="What is this URL for?" required />
                    </div>
                    <div>
                        <label for="project" class="form-label">Project</label>
                        <select id="project" name="project" class="form-select" required>
                            <option value="" disabled selected>Select a project</option>
                            @foreach (var project in projects)
                            {
                                <option value="@project.Name">@project.Name</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label for="environment" class="form-label">Environment</label>
                        <select id="environment" name="environment" class="form-select">
                            @foreach (var env in Enum.GetValues(typeof(URLBox.Domain.Enums.EnvironmentType)).Cast<URLBox.Domain.Enums.EnvironmentType>())
                            {
                                <option value="@env">@env</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Add URL</button>
                </form>
            </div>
        </div>
    </div>
</div>
